{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,

        "noImplicitAny": true,
        
        "module": "es6",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        
        "target": "es5",
        "allowJs": true,

        "typeRoots": [
            "./node_modules/@types", 
            "./src/scripts/types/"
        ]
    },
    "include": [
        "src/**/*",
    ],
}